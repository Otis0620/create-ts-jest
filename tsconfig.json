{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/"],
      "typings/*": ["src/typings/*"],
      "@/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
